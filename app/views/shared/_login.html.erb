<p class="section"><%=t "welcome.log" %></p>

<%= form_tag login_url do %>

  <table>

    <tr>
      <td><%= label_tag I18n.t("model.users.login") %></td>
      <td><%= text_field_tag :login, params[:login] %></td>
    </tr>

    <tr>
      <td><%= label_tag I18n.t("model.users.password") %></td>
      <td><%= password_field_tag :password %></td>
    </tr>

  </table>

  <%= submit_tag I18n.t("welcome.log") %>

<% end %>

<p class="section"><%= link_to I18n.t("welcome.lost_password"), lost_password_path %></p>

<p class="section"><%= link_to I18n.t("welcome.sign_up"), signup_path %></p>
