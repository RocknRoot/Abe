<%= form_for @current_user, :url => user_path do |f| %>

  <% if @current_user.errors.any? %>
    <div class="error_messages">
      <p><%=t "general.errors" %> :</p>
      <ul>
        <% for message in @current_user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>

    <tr>
      <td><%= f.label I18n.t("model.users.old_password") %></td>
      <td><%= f.password_field :old_password %></td>
    </tr>

    <tr>
      <td><%= f.label I18n.t("model.users.new_password") %></td>
      <td><%= f.password_field :password %></td>
    </tr>

  </table>

  <p class="button"><%= f.submit I18n.t("users.edit") %></p>

<% end %>
