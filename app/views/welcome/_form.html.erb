<%= form_for @user, :url => signup_create_path do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <p><%=t "general.errors" %> :</p>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><%= f.label I18n.t("model.users.login") %></td>
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <td><%= f.label I18n.t("model.users.email") %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label I18n.t("model.users.password") %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label I18n.t("model.users.time_zone") %></td>
      <td><%= f.time_zone_select :time_zone %></td>
    </tr>
  </table>
  <p class="button"><%= f.submit I18n.t("welcome.sign_up") %></p>
<% end %>
